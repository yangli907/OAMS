package com.adobe.ColdFusion.validation 
{
	import mx.validators.RegExpValidator;

	public class UrlValidator extends RegExpValidator 
	{
		private var regex:String = "^((http|https|ftp|file)\:\/\/([a-zA-Z0-0]*:[a-zA-Z0-0]*(@))?[a-zA-Z0-9-\.]+(\.[a-zA-Z]{2,3})?(:[a-zA-Z0-9]*)?\/?([a-zA-Z0-9-\._\?\,\'\/\+&amp;%\$#\=~])*)|((mailto)\:[a-zA-Z0-9-]+(\.[a-zA-Z0-9-]+)*@([a-zA-Z0-9-]+\.)+[a-zA-Z0-9]{2,7})|((news)\:[a-zA-Z0-9\.]*)$";
		
		public function UrlValidator() 
		{
			this.expression = regex;
			super();
		}
		
	}
}